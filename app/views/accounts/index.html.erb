<div class="span10">
  <h1><%= @bank.name %></h1>
</div>

<div class="span10">
  <h2>Accounts</h2>
</div>

<div class="span10">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <th>Allowance</th>
      <th>Balance</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @accounts.each do |account| %>
    <tr>
      <td><%= account.name %></td>
      <td><%= number_to_currency(account.allowance) %></td>
      <td><%= number_to_currency(account.balance) %></td>
      <td><%= link_to 'Show', bank_account_path(@bank,account), :class => 'btn' %></td>
      <td><%= link_to 'Edit', edit_bank_account_path(@bank,account), :class => 'btn btn-info' %></td>
      <td><%= link_to 'Destroy', [@bank, account], :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger' %></td>
    </tr>
  <% end %>
  </tbody>
  </table>
</div>

<div class="span10">

  <%= link_to 'Create New Account', new_bank_account_path(@bank), :class => 'btn btn-primary' %>

</div>
