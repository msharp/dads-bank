<h1>Listing accounts</h1>

<table>
  <tr>
    <th>Bank</th>
    <th>Name</th>
    <th>Allowance</th>
    <th>Balance</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= account.bank.name %></td>
    <td><%= account.name %></td>
    <td><%= number_to_currency(account.allowance) %></td>
    <td><%= number_to_currency(account.balance) %></td>
    <td><%= link_to 'Show', bank_account_path(@bank,account) %></td>
    <td><%= link_to 'Edit', edit_bank_account_path(@bank,account) %></td>
    <td><%= link_to 'Destroy', [@bank, account], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

