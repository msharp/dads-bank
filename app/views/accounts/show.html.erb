<p id="notice"><%= notice %></p>

<p>
  <b><%= @account.bank.name %></b>
  <%= @account.name %>
</p>

<p><b>Balance:</b> <%= number_to_currency(@account.balance) %></p>
<p><b>Allowance:</b> <%= number_to_currency(@account.allowance) %></p>
<p><b>Interest rate:</b> <%= @account.bank.interest_readable %>


<div id="chart_div" style="width: 100%; height: 300px;"></div>

<table class="table table-striped" id="transactions">
  <thead>
  <tr>
    <th>When</th>
    <th>Description</th>
    <th>Amount</th>
    <th>Balance</th>
  </tr>
  </thead>
  <tbody>
  <% @account.transactions.reverse.each do |transaction| %>
  <tr>
    <td><%= transaction.created_at %></td>
    <td><%= transaction.description %></td>
    <td><%= number_to_currency(transaction.amount, :precision => 4) %></td>
    <td><%= number_to_currency(transaction.balance) %></td>
  </tr>
  <% end %>
  </tbody>
</table>

